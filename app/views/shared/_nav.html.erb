<% unless controller_name == 'sessions' ||  (controller_name == 'users' && (action_name =='new' || action_name == 'create'))%>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to 'Twitter', root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if current_user %>
            <li class="nav-item">
              <strong class="nav-link"><%= current_user.name%></strong>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Create Post', new_post_path, class: 'nav-link' %>
          </li>
          <% if current_user %>
            <li class="nav-item ml-auto">
              <%= link_to 'My Post', my_post_path, class: 'nav-link' %>
            </li>
            <li class="nav-item ml-auto">
              <%= link_to 'Log out', logout_path, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item ml-auto">
              <%= link_to 'Login/Signup', login_path, class: 'nav-link' %>
            </li>
          <% end %>
          <!-- Add more menu items as needed -->
        </ul>
      </div>
    </div>
  </nav>
<% end %>
